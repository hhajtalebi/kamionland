@page
@model ServiceHost.Pages.Account.IndexModel
@{
    ViewData["Title"] = " ورود و ثبت نام";

}
<nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index-1.html">خانه</a></li>

            <li class="breadcrumb-item active" aria-current="page">ورود / ثبت نام</li>
        </ol>
    </div><!-- End .container -->
</nav><!-- End .breadcrumb-nav -->
@if (Model.LoginMessage != null)
{
    <div class="alert alert-danger">@Model.LoginMessage</div>
}
@if (Model.RegisterMessage != null)
{
    <div class="alert alert-danger">@Model.RegisterMessage</div>
}
<div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17 shadow shadow-lg"
     style="background-image: url('/assets/images/backgrounds/loginbg.png')">
    <div class="container">
        <div class="form-box">
            <div class="form-tab">

                <ul class="nav nav-pills nav-fill" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="signin-tab-1" data-toggle="tab" href="#signin-1" role="tab"
                           aria-controls="signin-1" aria-selected="true">  ورود   </a>
                    </li>
                    @* <li class="nav-item">
                    <a class="nav-link" id="signin-tab-2" data-toggle="tab" href="#signin-2" role="tab"
                    aria-controls="signin-2" aria-selected="true">  ورود با شماره تماس </a>
                    </li> *@
                    <li class="nav-item">
                        <a class="nav-link " id="register-tab-2" data-toggle="tab" href="#register-2"
                           role="tab" aria-controls="register-2" aria-selected="false">ثبت نام</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="signin-1" role="tabpanel" aria-labelledby="signin-tab-1">
                        <form method="post" asp-page-handler="Login">
                            <div class="form-group">
                                <label>نام کاربری *</label>
                                <input type="text" class="form-control" id="username"
                                       name="username" required>
                            </div><!-- End .form-group -->

                            <div class="form-group">
                                <label>رمز عبور *</label>
                                <input type="password" class="form-control" id="password"
                                       name="password" required>
                            </div><!-- End .form-group -->

                            <div class="form-footer">
                                <button type="submit" class="btn btn-outline-primary-2">
                                    <span>ورود</span>
                                    <i class="icon-long-arrow-left"></i>
                                </button>
                                @*
                                <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input"
                                id="signin-remember-2">
                                <label class="custom-control-label" for="signin-remember-2">
                                مرا به خاطر
                                بسپار
                                </label>
                                </div><!-- End .custom-checkbox -->

                                <a href="/Account/forget-password" class="forgot-link">رمز عبور خود را فراموش کرده اید؟</a> *@
                            </div><!-- End .form-footer -->
                        </form>
                        @*  <div class="form-choice">
                        <p class="text-center">یا ورود با </p>
                        <div class="row">
                        <div class="col-sm-6">
                        <a href="#signin-2" class="btn btn-login btn-g">
                        <i class="icon-mobile-alt"></i>
                        شماره موبایل
                        </a>
                        </div>

                        </div>
                        </div> *@
                    </div>
                    <div class="tab-pane fade " id="signin-2" role="tabpanel" aria-labelledby="signin-tab-2">
                        <form>
                            <div class="form-group">
                                <label class="d-inline-block w-100 text-right font-weight-bold">
                                    شماره موبایل خود
                                    را وارد
                                    کنید
                                </label>
                                <div class="row">
                                    <div class="col-4 col-sm-3">
                                        <input class="form-control" type="text" value="98+">
                                    </div>
                                    <div class="col-8 col-sm-9">
                                        <input class="form-control" type="number" placeholder="000-000-0000">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group text-right">
                                <button class="btn btn-outline-primary-2" type="submit">ارسال</button>
                            </div>
                            <div class="form-group text-right">
                                <span class="reset-password-link">
                                    رمز را دریافت
                                    نکردید؟  <a class="text-danger" href="javascript:void(0)">
                                        ارسال
                                        مجدد
                                    </a>
                                </span>
                            </div>
                        </form>
                        <form method="post" asp-page-handler="LoginFromMobile">
                            <div class="form-group">
                                <label class="d-inline-block w-100 text-right font-weight-bold">
                                    رمز دریافت شده
                                    را وارد
                                    کنید
                                </label>
                                <div class="row">
                                    <div class="col">
                                        <input class="form-control text-center opt-text" name="Code" type="text" value="00">
                                    </div>

                                </div>
                            </div>

                            <div class="form-group mt-3">
                                <button class="btn btn-outline-primary-2 btn-block" type="submit">
                                    ورود به سیستم
                                </button>
                            </div>
                        </form>
                        <p>
                            رمز عبور خود را به یاد آوردید؟<a class="mr-2" href="/Account">
                                وارد
                                شوید
                            </a>
                        </p>

                        <div class="form-choice">
                            <p class="text-center">یا ورود با </p>
                            <div class="row">
                                <div class="col-sm-6">
                                    <a href="#signin-2" class="btn btn-login btn-g">
                                        <i class="icon-mobile-alt"></i>
                                        شماره موبایل
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div>


                    <div class="tab-pane fade  " id="register-2" role="tabpanel"
                         aria-labelledby="register-tab-2">
                        <div class="alert alert-info">
                            <p class="text-white">
                                شماره موبایل شما به عنوان نام کاربری و کد ملی شما به عنوان رمز عبور جهت ورود نیاز است
                            </p>
                        </div>
                        <form method="post" asp-page-handler="Register">
                       
                            <div class="form-group">
                                <label>نام و نام خانوادگی  *</label>
                                <input type="text" class="form-control" id="fullname"
                                       name="fullname" required>
                            </div>
                            <div class="form-group">
                                <label>نام پدر  *</label>
                                <input type="text" class="form-control" id="fullname"
                                       name="NameFather" required>
                            </div>

                            <div class="form-group">
                                <label>شماره موبایل *</label>
                                <input type="text" class="form-control" id="mobile"
                                       name="mobile" required>
                            </div>
                            <div class="form-group">
                                <label> کدملی *</label>
                                <input type="text" class="form-control" id="codeMeli"
                                       name="codeMeli" required>
                            </div>


                            <div class="form-footer">
                                <button type="submit" class="btn btn-outline-primary-2">
                                    <span>ثبت نام</span>
                                    <i class="icon-long-arrow-left"></i>
                                </button>

                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input"
                                           id="register-policy-2" required>
                                    <label class="custom-control-label" for="register-policy-2">
                                        من با <a href="#">قوانین و مقررات</a> موافقم *
                                    </label>
                                </div>
                            </div>
                        </form>
                        <div class="form-choice">
                            <p class="text-center"> ورود با </p>
                            <div class="row">
                                <div class="col-sm-6">
                                    <a href="#signin-1" class="btn btn-login btn-g">
                                        <i class="icon-user"></i>
                                        اطلاعات اکانت
                                    </a>
                                </div>
                                @*   <div class="col-sm-6">
                                <a href="#signin-2" class="btn btn-login  btn-f">
                                <i class="icon-mobile-alt"></i>
                                شماره موبایل
                                </a>
                                </div> *@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>