}
<div class="page-content">
    <div class="intro-section bg-image"
         style="background-image: url(assets/images/demos/demo-28/background.jpg);">
        <div class="container">
            <div class="owl-carousel inner-carousel owl-simple rows cols-1" data-toggle="owl"
                 data-owl-options='{"nav": false, "dots": true,"rtl": true, "loop": true}'>
