@model TrucksManagement.Application.contracts.TrucksApplication.CreateTruck
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد  محصول جدید</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="Name" onchange="makeSlug('Name', 'Slug')">
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Code" class="control-label">کد کالا</label>
                    <input type="text" class="form-control" asp-for="Code" >
                    <span asp-validation-for="Code" class="error"></span>
                </div>
            </div>

           
        </div>
        <div class="row">
          
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">دسته بندی</label>
                    <select type="text" class="form-control" asp-for="CategoryId" asp-items='new SelectList(Model.categoryList,"Id","Name")'>
                        <option value="0">انتخاب دسته بندی ....</option>

                    </select>
                    <span asp-validation-for="CategoryId" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
               
                <div class="form-group relative">
                    <input type="file" asp-for="Picture" class="form-control">
                    <label>انتخاب تصویر </label>
                    <div class="input-group round">
                        <input type="text" asp-for="Picture" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-info">
                                <i class="icon-picture"></i>
                                آپلود عکس
                            </button>
                        </span>
                    </div><!-- /.input-group -->
                    <div class="help-block"></div>
                </div><!-- /.form-group -->
            </div>
        </div>
        <div class="row">
           
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureTitel" class="control-label">عنوان تصویر</label>
                    <input type="text" class="form-control" asp-for="PictureTitel">
                    <span asp-validation-for="PictureTitel" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PrictureAlte" class="control-label">توضیحات تصویر</label>
                    <input type="text" class="form-control" asp-for="PrictureAlte">
                    <span asp-validation-for="PrictureAlte" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Manufacturer" class="control-label">سازنده</label>
                    <input type="text" class="form-control" asp-for="Manufacturer">
                    <span asp-validation-for="Manufacturer" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TruckModel" class="control-label">مدل</label>
                    <input type="text" class="form-control" asp-for="TruckModel">
                    <span asp-validation-for="TruckModel" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="HasColor" class="control-label">رنگ داربودن</label>
                    <input type="radio" value="false" class="radio" asp-for="HasColor">
                    <input type="radio" value="true" class="radio" asp-for="HasColor">
                    <span asp-validation-for="HasColor" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="ShortDescription" class="control-label">توضیحات کوتاه</label>
                    <textarea class="form-control autogrow" asp-for="ShortDescription" onchange="fillField('ShortDescription', 'MetaDescription')"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="ShortDescription" class="error"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="Description" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="Description"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="Description" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Slug" class="control-label">اسلاگ</label>
                    <input type="text" class="form-control" asp-for="Slug">
                    <span asp-validation-for="Slug" class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Keywords" class="control-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="Keywords">
                    <span asp-validation-for="Keywords" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="MetaDescription" class="control-label">توضیحات متا</label>
                    <textarea class="form-control autogrow" asp-for="MetaDescription"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="MetaDescription" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>