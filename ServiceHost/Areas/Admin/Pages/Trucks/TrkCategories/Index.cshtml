@page
@using _0_Framework.Application
@using WebAMI.CommanLayer.PublicClass
@model ServiceHost.Areas.Admin.Pages.Trucks.TrkCategories.IndexModel
@{
}
<div id="page-content">
    <div class="row">
        <div class="col-md-12">
            <div class="breadcrumb-box shadow">
                <ul class="breadcrumb">
                    <li><a href="/Admin/Dashboard">پیشخوان</a></li>
                    <li><a href="#">  تنظیمات سایت  </a></li>
                    <li class="active">  دستنه بندی ها </li>
                </ul>
                <div class="breadcrumb-left">
                    @ConvertDateTime.ConvertMiladiToShamsi(DateTime.Now, "HH:mm  dd MMMM yyyy")

                    <i class="icon-calendar"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="portlet box shadow">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h3 class="title">
                            <i class="icon-frane"></i>
                            لیست دسته بندی های  ثبت شده
                        </h3>
                    </div>
                    <div class="buttons-box">
                        <a class="btn btn-sm btn-default btn-round btn-fullscreen" rel="tooltip" title="تمام صفحه" href="#">
                            <i class="icon-size-fullscreen"></i>
                        </a>
                        <a class="btn btn-sm btn-default btn-round btn-collapse" rel="tooltip" title="کوچک کردن" href="#">
                            <i class="icon-arrow-up"></i>
                        </a>


                    </div>

                </div>
                <div class="portlet-body">


                    <div class="row">
                        <div class="col-md-2 col-12 m-b-20">
                            <a class="btn btn-success btn-round " href="#showmodal=@Url.Page("./Index", "Create")">
                                <i class="icon-plus"></i>
                                افزودن
                                <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                            </a>

                        </div><!-- /.col-md-4 -->

                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped" id="data-table">
                            <thead>
                                <tr>
                                    <th>ردیف</th>
                                    
                                    <th>تصویر</th>
                                    <th>دسته اصلی</th>
                                    <th>نام </th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ListCategory != null)
                                {
                                    @foreach (var category in Model.ListCategory)
                                    {
                                        <tr class="@((category.ParentId==null||category.ParentId==0)?"bg-info":"") ">
                                            <td>@category.Id</td>
                                            <td>
                                                <img src="~/Pictures/@category.PictureName" style="width: 70px; height: 70px" />
                                            </td>
                                            <td class="">
                                                @((category.parentName==null)?"دسته اصلی است":"") @category.parentName
                                            </td>
                                            <td>@category.Name</td>
                                           <td>
                                               
                                                <a class="btn btn-primary btn-round  "
                                                   href="#showmodal=@Url.Page("./Index", "Edit", new { id = category.Id })">
                                                    <i class="fa fa-edit"></i> ویرایش
                                                </a>
                                                <a href="#" class="btn btn-danger btn-round">غیر فعال</a>

                                            </td>

                                        </tr>
                                    }
                                }


                            </tbody>
                        </table>
                    </div><!-- /.table-responsive -->
                </div><!-- /.portlet-body -->
            </div><!-- /.portlet -->
        </div><!-- /.col-lg-12 -->
    </div><!-- /.row -->
</div><!-- /#page-content -->
