
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using _0_Framework.Application
@using _0_Framework.Application.Categoreis
@model TrucksManagement.Application.contracts.TrkCategoryApplication.EditTrkCategory

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش دسته بندی کلی سایت   </h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh">
    <div class="modal-body">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="PictureName" />
        
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="ParentId" class="control-label"> دسته بندی</label>
                    <select type="text" class="form-control" asp-for="ParentId" asp-items='new SelectList(Model.ChildCategories,"Id","Name")'>
                        <option value="0">انتخاب دسته بندی ....</option>

                    </select>
                    <span asp-validation-for="ParentId" class="error"></span>
                </div>
            </div>
        </div>
        <div class="form-group relative">
            <input type="file" asp-for="Picture" class="form-control">
            <label>انتخاب تصویر </label>
            <div class="input-group round">
                <input type="text" asp-for="Picture" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-info">
                        <i class="icon-picture"></i>
                        آپلود عکس
                    </button>
                </span>
            </div><!-- /.input-group -->
            <div class="help-block"></div>
        </div><!-- /.form-group -->

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureAlt" class="control-label">توضیح تصویر </label>
                    <input type="text" class="form-control" asp-for="PictureAlt">
                    <span asp-validation-for="PictureAlt" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureTitel" class="control-label">عنوان تصویر </label>
                    <input type="text" class="form-control" asp-for="PictureTitel">
                    <span asp-validation-for="PictureTitel" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>
           

        </div>
       
        <div class="row">
            <div class="form-group">
                <label asp-for="Description" class="control-label"> توضیحات</label>
                <textarea cols="12" rows="5" type="text" class="form-control" asp-for="Description"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="keyword" class="control-label"> کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="keyword">
                    <span asp-validation-for="keyword" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="MetaDescription" class="control-label"> توضیحات متا</label>
                    <input class="form-control" asp-for="MetaDescription" onchange="">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 col-lg-6 m-auto">

                <button type="submit" class="btn btn-success btn-block mt-4 mb-2">
                    <i class="icon-cursor"></i>
                    بروزرسانی
                    <div class="paper-ripple">
                        <div class="paper-ripple__background" style="opacity: 0;"></div>
                        <div class="paper-ripple__waves"></div>
                    </div>
                </button>
                <button type="button" class="btn btn-danger btn-block float-end mb-3" data-bs-dismiss="modal">
                    بازگشت
                    <div class="paper-ripple">
                        <div class="paper-ripple__background"></div>
                        <div class="paper-ripple__waves"></div>
                    </div>
                </button>
            </div>
        </div>

    </div>

</form>