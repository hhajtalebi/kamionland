@page
@using WebAMI.CommanLayer.PublicClass
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ServiceHost.Areas.Administration.Pages.Accounts.Role.IndexModel
@{
}

@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت نقش ها";
}



<div id="page-content">
    <div class="row">
        <div class="col-md-12">
            <div class="breadcrumb-box shadow">
                <ul class="breadcrumb">
                    <li><a href="/Admin/Dashboard">پیشخوان</a></li>
                    <li><a href="#">تنظیمات </a></li>
                    <li class="active">   دسترسی ها ها </li>
                </ul>
                <div class="breadcrumb-left">
                    @ConvertDateTime.ConvertMiladiToShamsi(DateTime.Now, "HH:mm  dd MMMM yyyy")

                    <i class="icon-calendar"></i>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="portlet box shadow">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h3 class="title">
                            <i class="icon-frane"></i>
                            لیست دسترسی ها (@Model.Roles.Count)
                        </h3>
                    </div>
                    <div class="buttons-box">
                        <a class="btn btn-sm btn-default btn-round btn-fullscreen" rel="tooltip" title="تمام صفحه" href="#">
                            <i class="icon-size-fullscreen"></i>
                        </a>
                        <a class="btn btn-sm btn-default btn-round btn-collapse" rel="tooltip" title="کوچک کردن" href="#">
                            <i class="icon-arrow-up"></i>
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-2 col-12 m-b-20">
                            <a class="btn btn-success btn-round " asp-page="Create">
                                <i class="icon-plus"></i>
                                افزودن
                                <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                            </a>

                        </div><!-- /.col-md-4 -->

                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped" id="data-table">
                            <thead>
                                <tr>
                                    <th>ردیف</th>
                                    <th>نام </th>
                                    <th>تاریخ ثبت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Roles != null)
                                {
                                    @foreach (var Item in Model.Roles)
                                    {
                                        <tr>
                                            <td>@Item.Id</td>
                                            <td>@Item.Name</td>
                                            <td>@Item.CreationDate</td>

                                            <td>

                                                <a asp-page="Edit" asp-route-id="@Item.Id" class="btn btn-primary btn-round">ویرایش</a>


                                            </td>

                                        </tr>
                                    }
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section AdminScripts {
    <script src="~/Admin/plugins/data-table/datatables.min.js"></script>
    <script src="~/Admin/plugins/data-table/datatables.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}